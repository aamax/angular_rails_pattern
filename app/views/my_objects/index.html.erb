<div ng-controller='MyObjectCtrl'>
	<h1>MyObjects#index</h1>
	<table class='table table-striped'>
      <thead>
        <th>Name</th>
        <th>Description</th>
      </thead>
      <tbody>
      <tr ng-repeat="obj in myObjectList | orderBy:'name'">
        <td>
          <a href="#" ng-click="showMyObject(obj)">{{ obj.name }}</a>
        </td>
        <td>
          {{ obj.description }}
        </td>
		<td>
			<a href="#" ng-click='showMyObject(obj)' class='btn btn-warning'><i class='icon-wrench icon-large icon-white'></i></a>
		    <br/><br/>
			<a href="#" class='btn btn-danger'><i class='icon-remove icon-large icon-white' ng-click='deleteMyObject(obj)'></i></a>
		    <br/>		    
		</td>     
 		</tr>
      </tbody>
    </table>
    <%= render "my_object_modal" %>
</div>